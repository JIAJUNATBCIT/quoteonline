{
  "name": "quote-online",
  "version": "1.0.0",
  "description": "全栈在线询价系统",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "server:no-warn": "NODE_NO_WARNINGS=1 nodemon server.js",
    "client": "cd client && ng serve",
    "build": "cd client && ng build",
    "install-all": "npm install && cd client && npm install",
    "logs": "node scripts/view-logs.js",
    "logs:error": "node scripts/view-logs.js --error",
    "logs:tail": "node scripts/view-logs.js --tail",
    "logs:today": "node scripts/view-logs.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "karma-chrome-launcher": "^3.2.0",
    "nodemon": "^3.0.2"
  },
  "author": "",
  "license": "ISC"
}
